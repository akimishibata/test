	<script>
document.addEventListener('DOMContentLoaded', function () {
    var images = [
        './images/vj03-2.jpg',
        './images/vj03-1.jpg', 
    ];
    var currentIndex = 0;
    var bgElement = document.querySelector('#sec01 .bg');

    function changeBackground() {
        bgElement.classList.remove('active');
        
        setTimeout(function() {
            currentIndex = (currentIndex + 1) % images.length;
            bgElement.style.backgroundImage = `linear-gradient(90deg, #708090, transparent),url(${images[currentIndex]})`;
            bgElement.classList.add('active');
        }, 500);  // CSS transition と併せて少し間を空けてから active クラスを付与
    }
    
    // 初期表示をしっかり表示するために、まず active クラスを付与
    bgElement.classList.add('active');
    setInterval(changeBackground, 4000);  // 4000ミリ秒ごとに画像を切り替え
});
</script>

	
	
